@model List<ResultFooterAddressDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Footer Bilgi Listesi</h4>
                        <p class="card-subtitle mb-4">
                            Footer alanındaki  işlemlerin gerçekleşeceği sayfalardır.Bilgi girişi yaparken bilgileri eksiksiz girmeye çalışın.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>Açıklama</th>
                                        <th>Adres</th>
                                        <th>Telefon</th>
                                        <th>Email</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Description</td>
                                            <td>@item.Address</td>
                                            <td>@item.Phone</td>
                                            <td>@item.Email</td>
                                            <td><a href="/Admin/AdminFooter/RemoveFooter/@item.FooterAddressID" class="btn btn-outline-danger">Sil</a></td>
                                            <td><a href="/Admin/AdminFooter/UpdateFooter/@item.FooterAddressID" class="btn btn-outline-success">Güncelle</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/Admin/AdminFooter/CreateFooter/" class="btn btn-primary">Yeni Footer Bilgi Girişi</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


