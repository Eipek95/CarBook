@model List<ResultCommentDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}
<div class="page-content">
    <div class="container-fluid">





        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Blog İle İlgili Yorumlar</h4>
                        <hr />
                        <p class="card-subtitle mb-4">Bloga ait yorumları buradan kaldırabilirsiniz.</p>
                        <div class="row">
                            <div class="col-sm-4 mb-2 mb-sm-0">
                                <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        if (count == 1)
                                        {
                                            <a class="nav-link active show" id="v-pills-@item.Name.Replace(" ","").ToLower()-tab" data-toggle="pill" href="#v-pills-@item.Name.Replace(" ","").ToLower()" role="tab" aria-controls="v-pills-@item.Name.Replace(" ","").ToLower()"
                                               aria-selected="true">
                                                <i class="mdi mdi-account-circle d-lg-none d-block"> @item.Name</i>
                                                <span class="d-none d-lg-block"> @item.Name</span>
                                            </a>
                                        }

                                        else
                                        {
                                            <a class="nav-link" id="v-pills-@item.Name.Replace(" ","").ToLower()-tab" data-toggle="pill" href="#v-pills-@item.Name.Replace(" ","").ToLower()" role="tab" aria-controls="v-pills-@item.Name.Replace(" ","").ToLower()"
                                               aria-selected="false">
                                                <i class="mdi mdi-account-circle d-lg-none d-block"> @item.Name</i>
                                                <span class="d-none d-lg-block">@item.Name</span>
                                            </a>
                                        }
                                    }
                                </div>
                            </div>

                            <div class="col-sm-4">
                                <div class="tab-content" id="v-pills-tabContent">

                                    @{
                                        count = 0;
                                        foreach (var item in Model)
                                        {
                                            count++;
                                            if (count == 1)
                                            {
                                                <div class="tab-pane fade active show" id="v-pills-@item.Name.Replace(" ","").ToLower()" role="tabpanel" aria-labelledby="v-pills-@item.Name.Replace(" ","").ToLower()-tab">
                                                    <p class="mb-0">
                                                        @item.CreatedDate.ToString()
                                                    </p>
                                                    <hr />
                                                    <p class="mb-0">
                                                        @item.Description
                                                    </p>
                                                    <br />
                                                    <p class="mb-0 text-end">
                                                        <a href="/Admin/AdminComment/RemoveComment/@item.CommentID" class="btn btn-outline-danger form-control">Yorum Sil</a>
                                                    </p>
                                                </div>
                                            }

                                            else
                                            {
                                                <div class="tab-pane fade" id="v-pills-@item.Name.Replace(" ","").ToLower()" role="tabpanel" aria-labelledby="v-pills-@item.Name.Replace(" ","").ToLower()-tab">
                                                    <p class="mb-0">
                                                        @item.CreatedDate.ToString()
                                                    </p>
                                                    <hr />
                                                    <p class="mb-0">
                                                        @item.Description
                                                    </p>
                                                    <br />
                                                    <p class="mb-0">
                                                        <a href="/Admin/AdminComment/RemoveComment/@item.CommentID" class="btn btn-outline-danger form-control">Yorumu Sil</a>
                                                    </p>
                                                </div>
                                            }
                                        }
                                    }
                                </div>
                            </div>

                            <div class="col-sm-4"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


