@model CreateReservationDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}


<section class="ftco-section bg-light">
    <div class="container">
        <div class="row">
            
                <div class="col-md-4">
                    <div class="car-wrap rounded ftco-animate">
                        <div class="custom-card">
                            <div class="img rounded d-flex align-items-end" style="background-image: url();">
                            </div>
                            <div class="text">
                                <h2 class="mb-0"><a href="car-single.html">CarID</a></h2>
                                <div class="d-flex mb-3">
                                    <span class="cat">CarID</span>
                                    <p class="price ml-auto">CarID <span>/Günlük</span></p>
                                </div>
                            </div>

                        <div class="text">
                            <div class="d-flex mb-3">
                                <span class="cat">CarID</span>
                                <p class="price ml-auto">CarID ------> Günlük<p>
                            </div>
                        </div>
                        </div>

                    </div>
                </div>


            <div class="col-md-8">
                <form class="bg-light p-5 contact-form" method="post">
                    <h3 class="alert alert-success">Araç Kiralama Formu</h3>
                    <br />
                    <div class="form-group">
                        <input type="hidden" class="form-control" placeholder="Almak İstediğiniz Araç" asp-for="CarID" value="@ViewBag.carId">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Adınız" asp-for="Name">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Soyadınız" asp-for="Surname">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Mail Adresiniz" asp-for="Email">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Telefon Numaranız" asp-for="Phone">
                    </div>
                    <div class="form-group">
                        <label>Alınmak İstenen Lokasyon</label>
                        @Html.DropDownListFor(x => x.PickUpLocationID, (List<SelectListItem>)ViewBag.Values, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Teslim Edilmek İstenen Lokasyon</label>
                        @Html.DropDownListFor(x => x.DropOffLocationID, (List<SelectListItem>)ViewBag.Values, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Yaşınız" asp-for="Age">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Ehliyet Yılınız" asp-for="DriverLicenseYear">
                    </div>
                    <div class="form-group">
                        <textarea cols="30" rows="7" class="form-control" placeholder="Varsa Eklemek İstediklerniz" asp-for="Description"></textarea>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Rezervasyon Tamamla" class="btn btn-primary py-3 px-5">
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>


